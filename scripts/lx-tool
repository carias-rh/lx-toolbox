#!/usr/bin/env python3
"""
LX Tool - Simple wrapper for lx_toolbox CLI
"""

import sys
import os

# Add the parent directory to Python path so lx_toolbox can be imported as a package
script_dir = os.path.dirname(os.path.abspath(__file__))
parent_dir = os.path.dirname(script_dir)
sys.path.insert(0, parent_dir)

from lx_toolbox.main import main

if __name__ == '__main__':
    main() 