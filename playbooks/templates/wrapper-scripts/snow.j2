#!/bin/bash

VALID_ARGS=$(getopt -o :t:u:r:h --long team:,user:,region:,help: -- "$@")
if [[ $? -ne 0 ]]; then
    exit 1;
fi

eval set -- "$VALID_ARGS"
while [ : ]; do
  case "$1" in
    -t | --team)
        TEAM=$2
        shift 2
        ;;
    -u | --user)
        USER=$2
        shift 2
        ;;
    -r | --region)
        REGION=$2
        shift 2
        ;;
    --) shift;
        break
        ;;
    -h)
        echo "Usage: $(basename $0) [-t | --team arg] [-u | --user arg]"
        echo ""
        echo "Introduce the user full name as it appears in SNOW 'Assigned to' field"
        echo "$ snow -t 'RHT Learner Experience - T2' -u 'Carlos arias'"
        exit 1
        ;;


  esac
done

if [ $TEAM != '' ]; then
for process in $(ps -ef |egrep "$TEAM" |egrep -v 'grep|bash' |awk '{print $2}'); do kill $process; done
fi


if [[ $TEAM != '' ]]; then
for process in $(ps -ef |egrep "$TEAM" |egrep -v 'grep|bash' |awk '{print $2}'); do kill $process; done
fi

  if [[ $REGION == "" ]]
  then
    /usr/bin/ansible-playbook {{ playbook_dir }}/snow.yml -e user_name="\"$USER_NAME\"" -e team_name="\"$TEAM\""
    echo ""
    echo "---> Starting selenium script <---"
    /usr/bin/python /tmp/snow-$TEAM.py
  elif [[ $USER_NAME == "" ]]
  then
    /usr/bin/ansible-playbook {{ playbook_dir }}/snow.yml -e region="\"$REGION\"" -e team_name="\"$TEAM\""
    echo ""
    echo "---> Starting selenium script <---"
    /usr/bin/python /tmp/snow-$TEAM.py
fi



