#!/bin/bash
for process in $(ps -ef |egrep "snow.yml|intercom-profile|chromedriver" |egrep -v 'grep|bash' |awk '{print $2}'); do kill $process; done

if [ $# -ne 2 ]
  then
      echo "Please introduce the full name of the teammate as it appears in SNOW field 'Assigned to':"
      echo ""
      echo "$ snow Carlos Arias"
  else
    /usr/bin/ansible-playbook {{ playbook_dir }}/snow.yml -e lx_teammate_name="\"$1 $2\""
fi
