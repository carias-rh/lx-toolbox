                driver.find_element("xpath", '//*[@id="x_redha_red_hat_tr_x_red_hat_training.short_description"]').send_keys(course[0].split(":  ")[1].upper().replace(" ", "") + "-" + version[0].split(":  ")[1] + " FEEDBACK: " + summary[:100] + "...")
